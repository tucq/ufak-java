<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ufak.aftesale.mapper.AfterSaleMapper">

    <select id="queryPageList" parameterType="map" resultType="com.ufak.aftesale.entity.AfterSale">
        SELECT id,create_time,status,order_id,order_detail_id,after_sale_no, service_type,refund_fee FROM t_after_sale
        <include refid="where"/>
        ORDER BY create_time desc
        limit #{start},#{size}
    </select>

    <select id="totalCount" parameterType="map" resultType="long">
        SELECT count(1) FROM t_after_sale
        <include refid="where"/>
    </select>

    <sql id="where">
        <where>
            <if test="userId != null and userId != ''">
                AND user_id = #{userId}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>

        </where>
    </sql>

</mapper>